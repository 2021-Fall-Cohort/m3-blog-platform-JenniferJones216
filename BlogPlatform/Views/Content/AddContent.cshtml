@model BlogPlatform.Models.Content

@{
    ViewData["Title"] = "Latin Dance Blog - New Post";
}

<head>
    <link rel="stylesheet" href="~/Content/AddContent.css" />
</head>

<section class="parent">
    <div class="div1"></div>
    <div class="div2">

        <h1>Write a New Blog Post</h1>

        <h4>Latin Dance Blog</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="AddContent">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <br />
                        <textarea id="Title" rows="2" cols="50" asp-for="Title" class="form-control" /></textarea>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Author" class="control-label"></label>
                        <input asp-for="Author" class="form-control" />
                        <span asp-validation-for="Author" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        @*<label asp-for="Body" class="control-label"></label>*@
                        <textarea id="Body" rows="20" cols="100%" asp-for="Body" class="form-control" />Write your blog entry here</textarea>
                        <span asp-validation-for="Body" class="text-danger"></span>
                    </div>
                    <!--<div class="form-group">-->
                    @*<label asp-for="Now" class="control-label"></label>
        <input asp-for="Now" class="form-control" />*@
                    <!--<span asp-validation-for="Now" class="text-danger"></span>
    </div>-->
                    <div class="form-group">
                        <label asp-for="CategoryId" class="control-label"></label>
                        <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(ViewBag.Categories, "Id", "CatName"))"></select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                    <div class="form-group">
                        <a asp-action="Index">Back to List</a>
                    </div>
                </form>
            </div>
        </div>

        
    </div>

    <div class="div3"></div>

</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
