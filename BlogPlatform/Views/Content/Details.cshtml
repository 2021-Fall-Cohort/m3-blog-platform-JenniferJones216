@model BlogPlatform.Models.Content

@{
    ViewData["Title"] = "Latin Dance Blog";
}

<head>
    <link rel="stylesheet" href="~/Content/Details.css" />
</head>

<section class="parent">
        <div class="div1"></div>
    <div class="div2">
                
        <dl class="row">
            @*<dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>*@
            <dd class="col-sm-10">
                <h1>@Html.DisplayFor(model => model.Title)</h1>
            </dd>
            @*<dt class="col-sm-2">
                <h3>Topic</h3>
            </dt>*@
            <dd class="col-sm-10">
                <strong>Topic: </strong>@Model.Category.CatName
            </dd>
            @*<dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Author)
            </dt>*@
            <dd class="col-sm-10">
                By: @Html.DisplayFor(model => model.Author)
            </dd>

            @*<dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Now)
        </dt>*@
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Now)
            </dd>

            @*<dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Body)
        </dt>*@
            <dd class="col-sm-10" id="BlogContent">
                @Html.DisplayFor(model => model.Body)
            </dd>
        </dl>

        <div class="EditDeleteLinks">
            <a asp-action="Update" asp-route-id="@Model.Id">Edit</a> |
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
    <div class="div3"></div>
</section>
